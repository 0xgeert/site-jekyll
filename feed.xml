---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.lang.name }} - {{ site.lang.tagline }}</title>
 <link href="http://{{ site.lang.domain }}/atom.xml" rel="self"/>
 <link href="http://{{ site.lang.domain }}/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://{{ site.lang.domain }}/</id>
 <author>
   <name>{{ site.lang.name }}</name>
   <email>{{ site.lang.email }}</email>
 </author>
 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://{{ site.lang.domain }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://{{ site.lang.domain }}{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
</feed>